<%= form_for message, url: url, method: method, html: {class: "form"} do |f| %>
  <%= f.hidden_field :listing_id, value: message.listing_id %>

  <div class="form-group">
    <%= f.label :start_date, "What's the desired start date of your ad?" %>
    <%= f.date_select :start_date, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "What's the desired end date of your ad?" %>
    <%= f.date_select :end_date, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, required: true, class: "form-control", rows: "3" %>
  </div>

  <div class="form-group">
    <div class="col-sm-5"></div>
    <%= f.submit "Send Inquiry", class: 'col-sm-3 btn btn-warning' %>
  </div>
<% end %>